<table class="table table-hover">
              
<% @items.each do |item| %>
  <tr>
    <td><img class="item_thumb" src="<%= item.image_url %>" alt=""/></td>
    <td><%= link_to item.name, item %></td>
 
    <td>
      <div class="pull-right">
        <button class="btn btn-success btn-small"><i class="icon-leaf"> More Info</i></button> 
        <button class="btn btn-small"><i class="icon-plus"> Add to List</i></button>
      </div>
    </td>
   
  </tr>
<% end %>

 

</table>