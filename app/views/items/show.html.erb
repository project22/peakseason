
<style type="text/css">
.my_hero {
  padding: 20px;
  background-color: green;
  background: url("<%= @item.image_url %>");
  background-size: 100%;
  color: white;
  text-shadow: 1px 1px 1px #000;
  font-size:2.5em;
  background-position: center;
}

</style>
<div class=" my_hero"> 
      <h1 class ="banner_font"><%= @item.name %></h1>
    </div>
 <div class="container">
  <div class="row-fluid"> 
    
  </div>
  <div class="row-fluid">      
    <div class="span6">
      <div class="">
          
      
        <div>
          <h3>Try these recipes</h3>

          <div id="this-carousel-id" class="carousel slide" ><!-- class of slide for animation -->
            <div class="carousel-inner">

              <% my_index = 1 %>

  <% @recipes.each do |recipe|  %>
       
          
              <% if my_index == 1 then
                active_class = "active"
              else
                active_class = " "
              end           
              %>
              <div class="item <%= active_class %>" style="cursor:pointer; background-image: url('<%= recipe['image_url'] %>'); background-size:100%; height: 400px;    background-repeat:no-repeat; background-position:center top; background-color:gray" onclick="window.open('<%= recipe["source_url"] %>');" >
                          
                <div class="well well-small recipe_label">
                  <a href="<%= recipe['source_url'] %>" target="recipe"><strong><%= recipe['title'] %></strong></a>
                </div>
              </div>
              
              <% 
              my_index = my_index +1
              end %>
            </div><!-- /.carousel-inner -->
            <a class="carousel-control left" href="#this-carousel-id" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#this-carousel-id" data-slide="next">&rsaquo;</a>
          </div><!-- /.carousel -->
          <button class="btn">Buy Locally</button>
        </div>
      </div>
    </div>

    <div class="span6">
      <div>
        <h3><%= @item.name %></h3>
        <p><%= @item.description %></p>   
      </div>
    </div>
  </div>
</div>

 
