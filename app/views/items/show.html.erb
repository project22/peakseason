              <% my_index = 1 %>

  <% @recipes.each do |recipe|  %>
       
          
              <% if my_index == 1 then
                active_class = "active"
              else
                active_class = " "
              end           
              %>
              <div class="item <%= active_class %>" style="cursor:pointer; background-image: url('<%= recipe['image_url'] %>'); background-size:100%; height: 400px;    background-repeat:no-repeat; background-position:center top; background-color:gray" onclick="window.open('<%= recipe["source_url"] %>');" >
                

                
                <div class="well well-small recipe_label">
                  <a href="<%= recipe['source_url'] %>" target="recipe"><strong><%= recipe['title'] %></strong></a>
                </div>
              </div>
              
              <% 
              my_index = my_index +1
              end %>


             
