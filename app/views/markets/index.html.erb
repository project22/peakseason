<div class="container">
<h1>Markets in <%= @region.name %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>URL</th>
      <th>Address</th>
      <th>Description</th>
      <th>Day of Week</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @markets.each do |market| %>
      <tr>
        <td><%= market.name %></td>
        <td><img class="media-object" data-src="holder.js/64x64" width="100" src="<%= market.image_url %>"></td>
        <td><%= market.url %></td>

        <td><%= market.address %></td>
        <td><%= market.description %></td>
        <td><%= market.day_week %></td>
        <td><%= market.start_time %></td>
        <td><%= market.end_time %></td>

        <td><%= link_to 'Show', region_market_path(@region, market) %></td>
        <td><%= link_to 'Edit', edit_region_market_path(@region, market) %></td>
        <td><%= link_to 'Destroy', region_market_path(@region, market), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'View Vendors', region_markets_path(@region) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Market', new_region_market_path %>
</div>


