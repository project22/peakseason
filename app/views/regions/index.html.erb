<div class="container">
<h1>Regions Listing</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= region.country %></td>
        <td><%= link_to 'Show', region %></td>
        <td><%= link_to 'Edit', edit_region_path(region) %></td>
        <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'View Markets', region_markets_path(region.id) %>
          <%= link_to ':V2', "/regions/#{region.id}/markets" %></td>
        <td><%= link_to 'View Vendors', region_vendors_path(region.id) %></td>
        <td><%= link_to 'View Items', items_path(region.id) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Region', new_region_path %>
</div>
